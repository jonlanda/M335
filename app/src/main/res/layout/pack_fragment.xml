<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".RandomCharacterActivity"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shake_instruction"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moneyAccount"
            android:layout_width="352dp"
            android:layout_height="30dp"
            android:text=""
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="368dp"
            android:layout_height="398dp"
            android:contentDescription="@string/pack_image_description"
            android:src="@drawable/packcover" />

        <TextView
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:text="@string/pack_price"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="normal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>