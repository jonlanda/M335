<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".RandomCharacterActivity"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pack_title"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/packed_character_image"
            android:layout_width="372dp"
            android:layout_height="376dp"
            android:contentDescription="@string/character_image_description"
            android:scaleType="fitCenter"
            android:src="@drawable/collection_icon"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/randomCharacterInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingTop="16dp"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <!-- Use a horizontal LinearLayout for buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/packed_character_continue"
                android:text="Continue"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/packed_character_sell"
                android:text="Sell"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
